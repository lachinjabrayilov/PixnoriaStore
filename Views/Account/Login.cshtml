@model PixnoriaStore.Models.User
@{
    Layout = null;
    var error = ViewBag.Error as string ?? "";
    // Null kontrolü için:
    var emailValue = Model?.Email ?? "";
    var sifreValue = Model?.Sifre ?? "";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <!-- CSS ve HTML YAPISI TAMAMEN AYNI KALDI -->
    <meta charset="UTF-8">
    <title>Giriş Yap</title>
    <style>
        body {
            font-family: sans-serif;
            background-color: #f7f7f7;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .form-container {
            background-color: #fff;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 6px 28px rgba(224,60,25,0.1);
            width: 400px;
        }

        .form-title {
            text-align: center;
            font-size: 2em;
            color: #ed3c19;
            font-weight: bold;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #ed3c19;
        }

        .form-input {
            width: 100%;
            padding: 12px;
            font-size: 1em;
            border: 2px solid #ed3c19;
            border-radius: 12px;
        }

        .form-btn {
            width: 100%;
            padding: 12px;
            background-color: #ed3c19;
            color: white;
            font-size: 1.2em;
            font-weight: bold;
            border: none;
            border-radius: 12px;
            cursor: pointer;
        }

        .error-message {
            color: red;
            margin-bottom: 15px;
            text-align: center;
        }

        .field-validation-error {
            color: red;
            font-size: 0.9em;
            margin-top: 4px;
            display: block;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="form-title">Giriş Yap</div>
        @if (!string.IsNullOrWhiteSpace(error))
        {
            <div class="error-message">@error</div>
        }
        <form asp-action="Login" method="post" autocomplete="off">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="Email" class="form-label">E-posta</label>
                <!-- Sadece value eklendi -->
                <input asp-for="Email" id="Email" name="Email" class="form-input"
                       type="email" value="@emailValue" required />
                <span asp-validation-for="Email" class="field-validation-error"></span>
            </div>
            <div class="form-group">
                <label for="Sifre" class="form-label">Şifre</label>
                <!-- Sadece value eklendi -->
                <input asp-for="Sifre" id="Sifre" name="Sifre" class="form-input"
                       type="password" value="@sifreValue" required />
                <span asp-validation-for="Sifre" class="field-validation-error"></span>
            </div>
            <button type="submit" class="form-btn">Giriş Yap</button>
        </form>
    </div>

    <!-- Aynı Scriptler -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.13/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>